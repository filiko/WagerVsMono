# Server Configuration
PORT=5000

# Database Configuration
# For local development with MySQL:
DATABASE_URL="mysql://root:password@localhost:3306/wager_db"
# For local development with SQLite (alternative):
# DATABASE_URL="file:./dev.db"

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com

# JWT Configuration
JWT_SECRET=your_secure_jwt_secret_here_change_this_in_production

# Frontend URL Configuration
CLIENT_URL=http://localhost:3000

# Environment
NODE_ENV=development

# Admin dev login flag
ALLOW_ANY_ADMIN_LOGIN=true

# 0G (immutable artifact storage)
# ZEROG_ENDPOINT=https://api.0g.example/upload
# ZEROG_KEY=your_0g_api_key
# Application environment tag used in artifacts
APP_ENV=prod

# Optional internal key to protect the predictions endpoint
# PREDICTION_INTERNAL_KEY=dev-internal-key
